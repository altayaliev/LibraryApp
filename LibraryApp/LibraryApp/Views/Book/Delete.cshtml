@model Book


<form method="post">
    <input asp-for="Id" hidden/>
    <div class=" border p-3 mt-5">
        <div class=" row pb-3">
            <h2 class="text-primary">Delete Book Type</h2>
            </hr>
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name"disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="BookTypeId" class="p-0"></label>
            <select asp-for="BookTypeId" asp-items="ViewBag.BookTypeList" disabled class="form-control">
            </select>
            
            <span asp-validation-for="BookTypeId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Author" class="p-0"></label>
            <input asp-for="Author" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="p-0"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="p-0"></label>
            <input asp-for="Price" disabled class="form-control" />
        </div>



        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">Delete</button>
        <a asp-controller="Book" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
            Back to Books
        </a>

    </div>

</form>