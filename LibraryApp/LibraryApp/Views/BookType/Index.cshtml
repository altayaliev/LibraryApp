@model List<BookType>

    @if (TempData["success"]!=null)
{
    <h3 style="color:green">@TempData["success"]</h3>
}

<div class="container">
    <div class="row pt-3 pb-4"
        <div>
        <h1>Book Type List</h1>
        </div>
    </div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Book Type</th>
            <th></th>
            <th></th>
        </tr>
        <th></th>
    </thead>

    <tbody>
        @foreach(var BookType in  Model)
            {
            <tr>
                <td>@BookType.Id</td>
                <td>@BookType.Name</td>
                    <td>
                        <a asp-controller="BookType" asp-action="Edit" asp-route-id="@BookType.Id" type="button" class="btn btn-info"style="width:300px">Edit </a>
                    </td>
                    <td>
                        <a asp-controller="BookType" asp-action="Delete" asp-route-id="@BookType.Id" type="button" class="btn btn-danger" style="width:300px">Delete </a>
                    </td>
                    
                   
            </tr>
            }
    </tbody>
    </table>

    <div 
        class="row pt-3 pb-2">
        <div>
            <a asp-controller="BookType" asp-action="Add" class="btn btn-lg btn-primary" type="text/asa">
              + Book type  
            </a>
        </div>
    </div>

</div>

